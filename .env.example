# Production Environment Variables for Docker Deployment
# Copy this to .env and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_db_password_here
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=8080
DATABASE_URL=postgresql://postgres:your_secure_db_password_here@db:5432/worldscars
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_db_password_here

# Cloudinary Configuration (get from https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8080
FRONTEND_URL=https://your-domain.com

# For Railway/Render deployment, these will be set automatically
# For manual deployment, set your actual domain